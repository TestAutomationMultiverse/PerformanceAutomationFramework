{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSONPlaceholder User Schema",
  "description": "Schema for JSONPlaceholder user data",
  "type": ["object", "array"],
  "properties": {
    "id": {
      "type": ["integer", "string"],
      "description": "The user ID"
    },
    "name": {
      "type": "string",
      "description": "The user's name"
    },
    "username": {
      "type": "string",
      "description": "The user's username"
    },
    "email": {
      "type": "string",
      "description": "The user's email address"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "suite": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "zipcode": {
          "type": "string"
        },
        "geo": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "string"
            },
            "lng": {
              "type": "string"
            }
          }
        }
      }
    },
    "phone": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "company": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "catchPhrase": {
          "type": "string"
        },
        "bs": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": true,
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": ["integer", "string"]
      },
      "name": {
        "type": "string"
      },
      "username": {
        "type": "string"
      },
      "email": {
        "type": "string"
      }
    }
  }
}
