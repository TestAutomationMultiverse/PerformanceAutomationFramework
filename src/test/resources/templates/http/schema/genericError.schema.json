{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["error", "message"],
  "properties": {
    "error": {
      "type": "string",
      "minLength": 1
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "code": {
      "type": "integer"
    },
    "details": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "path": {
      "type": "string"
    },
    "trace_id": {
      "type": "string"
    }
  }
}
